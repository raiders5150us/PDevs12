@{
    ViewBag.Title = "Test Scripts";

    int storyId = ViewBag.StoryId ?? 0;
}
@Html.Hidden("MainStoryId", storyId)

<div class="container-fluid">
    <div class="row bg-w p-15">
        <div class="d-flex v-center h-space-between">
            <h3 class="d-flex v-center">
                <label>@ViewBag.Title</label>
            </h3>
            <a role="button" class="btn dv-btn-success btn-sm pull-right" ap-action-test-script-modal-form>
                <i class="fa fa-plus m-r-10"></i> Create Test Script
            </a>
        </div>
        <hr class="m-y-10" />
        
        <div class="d-flex v-center h-space-between">
            <div class="filter-by-item f-grow-1 m-x-5 col-lg-3">
                <label>Team</label>
                <select class="form-control teams-ddl" id="filter-team-id" multiple="multiple">
                    <option value="">Select Team</option>
                </select>
            </div>
            <div class="filter-by-item f-grow-1 m-r-5">
                <label class="d-block">Project</label>
                <select class="form-control projects-ddl m-w-200" id="filter-project-id">
                    <option value="">Select Project</option>
                </select>
            </div>
            <div class="filter-by-item f-grow-4 m-l-5">
                <label class="d-block">Story</label>
                <select class="form-control stories-ddl" id="filter-story-id">
                    <option value="">Select Story</option>
                </select>
            </div>
        </div>
        <hr class="m-y-10" />
        <table id="test-scripts-table" class="table table-striped table-bordered devs-table" style="width:100%; display: none;">
            <thead>
                <tr>
                    <th class="text-center">Status</th>
                    <th>Created By</th>
                    <th>Developer</th>
                    <th>Dev Manager</th>
                    <th>Business Analyst</th>
                    <th>Business Stakeholder</th>
                    <th>Request Date</th>
                    <th>Requested by Date</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <div class="clearfix"></div>
        <hr class="m-y-5" />

        <div class="test-scripts-paging d-flex v-center h-space-between">
            <p id="apdt_test-scripts_info" style="display: none">Showing <span class="apdt_startfrom">0</span> to <span class="apdt_endto">0</span> of <span class="apdt_total">0</span> records</p>
            <div class="" id="test-scripts-paging-container"></div>
        </div>
        <hr class="m-b-0 m-t-10" />
    </div>
</div>

@{ 
     Html.RenderPartial("Modals/_SaveTestScriptModalPartial", new PartialModel {StoryId = storyId });
}

@section scripts{
    <script src="~/Scripts/js/TestScriptService.js"></script>
    <script src="~/Scripts/js/TestScripts.js"></script>
}
